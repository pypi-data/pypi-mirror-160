{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://truefoundry.com/v1/buildPack",
  "title": "BuildPack Schema",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "description": "The specific version of the Open Application Model specification in use. This version of the specification covers apiVersions in core.oam.dev/v1alpha1."
    },
    "kind": {
      "type": "string",
      "description": "For a BuildPack schematic, must be BuildPack.",
      "enum": [
        "BuildPack"
      ]
    },
    "metadata": {
      "type": "object",
      "description": "Component metadata.",
      "properties": {
        "name": {
          "type": "string"
        },
        "labels": {
          "type": "object",
          "description": "A set of string key/value pairs used as arbitrary labels on this component.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "annotations": {
          "type": "object",
          "description": "A set of string key/value pairs used as arbitrary annotations on this component.",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "spec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "For a BuildPack schematic, must be BuildPack.",
          "enum": [
            "python"
          ]
        },
        "ignorePatterns": {
          "type": "array",
          "description": "The component's configuration options.",
          "items": {
            "type": "string"
          }
        },
        "dependency": {
          "type": "object",
          "properties": {
            "autoUpdate": {
              "type": "boolean"
            }
          },
          "required": [
            "autoUpdate"
          ],
          "additionalProperties": false
        },
        "docker": {
          "type": "object",
          "properties": {
            "dockerFileContent": {
              "type": "string"
            },
            "fileName": {
              "type": "string"
            },
            "overwrite": {
              "type": "boolean"
            }
          },
          "required": [
            "dockerFileContent",
            "fileName",
            "overwrite"
          ],
          "additionalProperties": false
        },
        "localRunCommand": {
          "type": "string",
          "description": "Run command to run service locally."
        }
      },
      "required": [
        "dependency",
        "docker",
        "localRunCommand",
        "ignorePatterns"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "apiVersion",
    "kind",
    "spec"
  ],
  "additionalProperties": false
}
